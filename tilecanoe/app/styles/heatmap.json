{
  "version": 8,
  "name": "Locations heatmap layer",
  "sources": {
    "locations": {
      "type": "vector",
      "url": "mbtiles://locations.mbtiles"
    }
  },
  "layers": [{
    "id": "locations-heatmap",
    "source": "locations",
    "source-layer": "locations",
    "maxzoom": 9,
    "minzoom": 0,
    "type": "heatmap",
    "paint": {
      "heatmap-opacity": 0.4,
      "heatmap-radius": 8,
      "heatmap-weight": 0.1
    }
  }]
}
