{
  "version": 8,
  "name": "Locations heatmap layer",
  "sources": {
    "locations": {
      "type": "vector",
      "url": "mbtiles://locations.mbtiles"
    }
  },
  "layers": [{
    "id": "locations-heatmap",
    "source": "locations",
    "source-layer": "locations",
    "type": "heatmap",
    "paint": {
      "heatmap-radius": ["interpolate", ["linear"],
        ["zoom"], 0, 5, 22, 30
      ],
      "heatmap-weight": ["interpolate", ["linear"],
        ["get", "point_count"], 0, 1, 60000000, 25
      ],
      "heatmap-intensity": ["interpolate", ["linear"],
        ["zoom"], 0, 1, 22, 10
      ],
      "heatmap-color": ["interpolate", ["linear"],
        ["heatmap-density"], 0, "rgba(0, 0, 255, 0)", 0.1, "#ffffb2", 0.3, "#feb24c", 0.5, "#fd8d3c", 0.7, "#fc4e2a", 1, "#e31a1c"
      ],
      "heatmap-opacity": 0.7
    }
  }]
}
